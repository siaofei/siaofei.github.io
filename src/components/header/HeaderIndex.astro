---
/**
 * Header Index (Used in Home)
 */

import { Image } from 'astro:assets'
import me from '@data/me'
import socials from '@data/social'

import BadgeSocial from '@components/widgets/BadgeSocial.astro'
import Header from './Header.astro'

// eslint-disable-next-line @typescript-eslint/no-unused-vars
type Props = Record<string, never>

const ySpacingClass = 'mt-6 md:mt-4'
---

<Header headerType="gray" headerWidth="wide">
  <div class="flex flex-col flex-wrap items-center justify-items-stretch md:flex-row md:gap-6">
    <div class="h-28 md:order-2 md:h-60">
      <Image
        src="/avatar.svg"
        alt="Xiaofei's avatar"
        width={36}
        height={36}
        class="h-full w-auto"
      />
    </div>
    <div class="md:order-1 md:flex-1">
      <h1
        class:list={['thi-title flex justify-center font-heading md:justify-start', ySpacingClass]}
      >
        <span class="mr-2 inline-flex h-9 origin-[70%_70%] animate-wave items-center justify-center"
          ><Image src="/waving_hand.webp" alt="Waving hand" width={36} height={36} /></span
        >
        {me.helloText || '你好！我是刘晓飞'}
      </h1>
      <p
        class:list={['max-w-full text-center text-base text-main-dark md:text-left', ySpacingClass]}
        set:html={me.shortIntro}
      />
      <div
        class:list={[
          'flex flex-wrap items-center justify-center gap-3 overflow-hidden md:justify-start',
          ySpacingClass,
        ]}
      >
        {/* socials */}
        {
          socials.map((item) => (
            <BadgeSocial
              iconUrl={item.iconUrl}
              url={item.url}
              title={item.title}
              imgClass={'h-full ' + item?.imgClass}
            />
          ))
        }
      </div>
    </div>
    <div class="mt-10 flex w-full flex-wrap items-center justify-center gap-3 md:order-3">
      {/* inforLinks */}
    </div>
  </div>
</Header>
