---
/**
 * Renders an h2 heading with an optional "more" link and icon.
 *
 * @param {string} title - The main heading text.
 * @param {string} [href] - If provided, adds a "...more" link next to the title.
 * @param {boolean} [icon] - If true, renders an icon slot next to the title.
 * @param {string} [class] - Additional CSS classes for the heading.
 */

import { makeSlugText } from '@utils/helpers'

interface Props {
  title: string
  href?: string
  icon?: boolean
  class?: string
}

const { title, href, icon, class: className } = Astro.props
---

<h2
  id={makeSlugText(title)}
  class:list={[
    className,
    'flex flex-wrap items-baseline gap-x-4 gap-y-0 font-heading text-[1.7rem] font-medium text-slate-700',
  ]}
>
  <div class="flex items-center gap-2.5">
    {icon && <slot />}
    <span>{title}</span>
  </div>
  {
    href && (
      <a class="hover:m2it-link-hover text-[60%] font-normal italic text-slate-600" href={href}>
        ...more
      </a>
    )
  }
</h2>
