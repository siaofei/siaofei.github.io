---
/**
 * Post Aside
 *
 * A component for displaying a sidebar for posts, positioned
 * either to the right or left.
 *
 * @param {('right'|'left')} position - Determines the sidebar's position.
 * @param {string} [class] - Optional CSS class for additional styling.
 */

interface Props {
  position: 'right' | 'left'
  class?: string
}

const { position, class: className } = Astro.props
---

<div
  class:list={[
    className,
    'flex h-full pl-8 pr-4',
    {
      'justify-start': position === 'right',
      'justify-end': position === 'left',
    },
  ]}
>
  <div class="min-w-[256px] max-w-[400px]"><slot /></div>
</div>
